{
  "openapi": "3.0.0",
  "info": {
    "description": "API to generate file txt with reggaeton lyric",
    "version": "1.0.0",
    "title": "Lyric Generator",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "tags": [
    {
      "name": "Lyric Generator",
      "description": "API to generate file txt with reggaeton lyric"
    }
  ],
  "paths": {
    "/lyric": {
      "get": {
        "tags": [
          "generate lyric"
        ],
        "summary": "Returns path to lyric file",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/lyric/file/<path:path>": {
      "parameters": [
        {
          "name": "path",
          "in": "path",
          "required": true,
          "description": "path to download txt lyric file",
          "type": "string"
        }
      ],
      "get": {
        "tags": [
          "get lyric"
        ],
        "summary": "Download the file with tle generated lyric",
        "parameters": [
          {
            "in": "path",
            "name": "path",
            "required": true,
            "description": "path to txt file",
            "schema": {
              "$ref": "#/components/schemas/path"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/lyric/file/all": {
      "get": {
        "tags": [
          "find all files"
        ],
        "summary": "Returns list of files",
        "responses": {
          "200": {
            "description": "OK",
            "type": "array",
              "files": {
                "$ref": "#/components/schemas/file"
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "file" : {
        "type": "string",
        "format": "string"
      },
      "path": {
        "type": "string",
        "format": "string"
      }
    }
  }
}